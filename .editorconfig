root = true

[*]
indent_style = space
indent_size = 4
max_line_length = 150

[*.{sh}]
indent_size = 2
end_of_line = lf

[script/release]
indent_style = tab

[*.{js,mjs,ts}]
indent_size = 2
end_of_line = lf
max_line_length = 180

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 150

[.licenses/**/*.{yml,yaml}]
max_line_length = 1000

[*.{json,ecrc}]
indent_size = 2
max_line_length = 180

[{Makefile,GNUmakefile}]
indent_style = tab
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 200

[{README,CONTRIBUTING}.md]
max_line_length = 180

[Dockerfile]
indent_size = 2
